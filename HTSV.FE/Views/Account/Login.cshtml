@model HTSV.FE.Models.NguoiDung.LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-[calc(100vh-200px)] flex items-center justify-center">
    <div class="max-w-md w-full">
        <!-- Logo và tiêu đề -->
        <div class="text-center">
            <img src="/images/logo.png" alt="Logo" class="h-16 mx-auto mb-4">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">
                Đăng nhập vào hệ thống
            </h2>
            <p class="text-gray-600 mb-8">
                Vui lòng đăng nhập để tiếp tục
            </p>
        </div>

        <!-- Form đăng nhập -->
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <form class="space-y-6" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm rounded-md"></div>

                <!-- Email field -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <div class="mt-1">
                        <input asp-for="Email" 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 
                                      focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                               placeholder="Nhập email của bạn">
                    </div>
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password field -->
                <div>
                    <label asp-for="MatKhau" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                    <div class="mt-1">
                        <input asp-for="MatKhau" 
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 
                                      focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                               placeholder="Nhập mật khẩu">
                    </div>
                    <span asp-validation-for="MatKhau" class="text-red-500 text-sm"></span>
                </div>

                <!-- Remember me -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" type="checkbox" 
                               class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded">
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>
                </div>

                <!-- Submit button -->
                <div>
                    <button type="submit" 
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium 
                                   text-white bg-primary hover:bg-primary/80 focus:outline-none focus:ring-2 focus:ring-offset-2 
                                   focus:ring-primary transition-colors duration-200">
                        Đăng nhập
                    </button>
                </div>

                <!-- Register link -->
                <div class="text-sm text-center">
                    <span class="text-gray-600">Chưa có tài khoản?</span>
                    <a href="@Url.Action("Register", "Account")" 
                       class="font-medium text-primary hover:text-primary/80 transition-colors duration-200">
                        Đăng ký ngay
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 