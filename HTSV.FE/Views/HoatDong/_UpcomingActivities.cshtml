@using HTSV.FE.Models.Enums
@model List<HTSV.FE.Models.HoatDong.HoatDongViewModel>
@using HTSV.FE.Extensions

<div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-xl font-semibold mb-4">Hoạt động sắp diễn ra</h2>
    @if (Model.Any())
    {
        <div class="space-y-4">
            @foreach (var hoatDong in Model)
            {
                <div class="bg-white p-4 rounded-lg shadow">
                    <div class="mb-2">
                        <h3 class="text-lg font-medium text-gray-900">@hoatDong.TenHoatDong</h3>
                        <p class="text-sm text-gray-500 mt-1">@hoatDong.MoTa</p>
                    </div>
                    <div class="flex items-center text-sm text-gray-500 space-x-4">
                        <div class="flex items-center">
                            <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            @hoatDong.DiaDiem
                        </div>
                        <div class="flex items-center">
                            <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            @hoatDong.ThoiGianBatDau.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    <div class="mt-3 flex items-center justify-between">
                        <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium @hoatDong.TrangThai.GetTrangThaiClass()">
                            @hoatDong.TrangThai.GetTrangThaiText()
                        </span>
                        <span class="text-sm text-gray-500">
                            (@hoatDong.SoLuongToiDa chỗ)
                        </span>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Details", new { id = hoatDong.Id })"
                            class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-gray-500 text-center py-4">Không có hoạt động sắp diễn ra</p>
    }
</div> 